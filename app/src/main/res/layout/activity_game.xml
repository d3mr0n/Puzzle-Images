<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <FrameLayout
        android:id="@+id/high_score_frame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:onClick="highScoreView"
        android:paddingTop="30.0dip"
        android:paddingRight="4.0dip"
        tools:ignore="RtlHardcoded,RtlSymmetry">

        <TextView
            android:id="@+id/high_score_title"
            android:layout_width="fill_parent"
            android:layout_height="26.0dip"
            android:background="@drawable/score_background"
            android:gravity="center"
            android:text="@string/high_score"
            android:textColor="#ffffffff"
            android:textSize="16.0sp" />

        <TextView
            android:id="@+id/high_score"
            android:layout_width="110.0dip"
            android:layout_height="30.0dip"
            android:layout_marginTop="24.0dip"
            android:background="@drawable/score_background"
            android:gravity="center"
            android:text="0"
            android:textColor="#ffffffff"
            android:textSize="18.0sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <View
            android:layout_width="80dp"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:background="@color/material_brown_600" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/score_frame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24.0dip"
        android:layout_marginRight="24.0dip"
        android:layout_toStartOf="@+id/high_score_frame"
        android:layout_toLeftOf="@+id/high_score_frame"
        android:paddingTop="30.0dip">

        <TextView
            android:id="@+id/score_title"
            android:layout_width="100.0dip"
            android:layout_height="26.0dip"
            android:background="@drawable/score_background"
            android:gravity="center"
            android:text="@string/score"
            android:textColor="#ffffffff"
            android:textSize="16.0sp" />

        <TextView
            android:id="@+id/score_count"
            android:layout_width="100.0dip"
            android:layout_height="30.0dip"
            android:layout_marginTop="24.0dip"
            android:background="@drawable/score_background"
            android:gravity="center"
            android:text="0"
            android:textColor="#ffffffff"
            android:textSize="18.0sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <View
            android:layout_width="80dp"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:background="@color/material_brown_600" />
    </FrameLayout>

    <ImageView
        android:id="@+id/img"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="2.0dip"
        android:layout_marginTop="116.0dip"
        android:layout_marginRight="2.0dip"
        android:background="@drawable/shape_puzzle"
        tools:ignore="ContentDescription" />

    <RelativeLayout
        android:id="@+id/puzzle_container"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="124.0dip"
        android:paddingRight="@dimen/activity_horizontal_margin" />
</RelativeLayout>