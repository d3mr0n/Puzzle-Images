<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/puzzle_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".PuzzleActivity">

    <Button
        android:id="@+id/photo_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:onClick="dispatchTakePictureIntent"
        android:text="TAKE PHOTO" />

    <Button
        android:id="@+id/shuffle_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/stock_pic_button"
        android:layout_centerHorizontal="true"
        android:onClick="shuffleImage"
        android:text="SHUFFLE" />

    <Button
        android:id="@+id/solve_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/shuffle_button"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:onClick="solve"
        android:text="SOLVE" />

    <Button
        android:id="@+id/stock_pic_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/photo_button"
        android:layout_alignEnd="@+id/photo_button"
        android:layout_alignRight="@+id/photo_button"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:onClick="useStockPic"
        android:text="Use Stock Picture" />

    <Button
        android:id="@+id/gallery_button"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/stock_pic_button"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="0dp"
        android:onClick="dispatchTakeGallery"
        android:text="Use \nGallery"
        tools:ignore="OnClick" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/shuffle_button"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="145dp"
        android:layout_marginLeft="145dp"
        android:layout_marginBottom="1dp"
        android:onClick="inc_N"
        android:text="INC_N"
        android:textSize="12sp"
        tools:ignore="OnClick" />

    <Button
        android:id="@+id/button2"
        android:layout_width="108dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/shuffle_button"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="270dp"
        android:onClick="dec_N"
        android:text="DEC_N"
        android:textSize="12sp"
        tools:ignore="OnClick" />

    <TextView
        android:id="@+id/score_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="136dp"
        android:text="Score: 0" />

</RelativeLayout>
