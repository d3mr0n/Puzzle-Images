            android:layout_height="260.0dip"
            android:layout_margin="6.0dip"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:selectableItemBackground"
            android:onClick="onClickCard">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="120.0dip"
                    android:layout_height="120.0dip"
                    android:background="@drawable/tiles_three"
                    android:padding="10.0dip"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10.0dip"
                    android:text="@string/size_three"
                    android:textSize="16.0sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1.0dip"
                    android:layout_margin="10.0dip"
                    android:background="@color/lightGray" />

                <TextView
                    android:id="@+id/record"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/high_score_choose_game"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="16.0sp" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/fourCardId"
            android:layout_width="160.0dip"
            android:layout_height="260.0dip"
            android:layout_margin="6.0dip"
            android:clickable="true"
